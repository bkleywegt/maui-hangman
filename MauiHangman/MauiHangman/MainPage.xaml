<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiHangman.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,25, 30, 0"
            Spacing="25">
            <Image Source="gallows.png" 
                   Aspect="AspectFit" />
            
            <VerticalStackLayout
                Spacing="0">
                
                <Label
                    Text="{Binding WinsMessage}"
                    TextColor="DarkBlue"
                    FontSize="20" />
                
                <Label
                    Text="{Binding LossesMessage}"
                    TextColor="Red"
                    FontSize="20" />
                
            </VerticalStackLayout>
            
            <Editor
                Placeholder=""
                Text="{Binding GallowsMessage, Mode=TwoWay}"
                FontSize="20"
                FontAttributes="Bold"
                TextColor="Black"
                BackgroundColor="WhiteSmoke"
                HeightRequest="250"
                IsReadOnly="True" />
            
            <FlexLayout 
                x:Name="GuessesLayout"
                Direction="Row"
                Wrap="Wrap"
                >
                
                <Button
                    Text="a" 
                    Clicked="OnGuessBtnClicked"
                    HorizontalOptions="Start"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    Margin="5"
                    FontSize="20"/>
                
                <Button
                    Text="b" 
                    Clicked="OnGuessBtnClicked"
                    HorizontalOptions="Start"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    Margin="5"
                    FontSize="20"/>
                
                <Button
                    Text="c" 
                    Clicked="OnGuessBtnClicked"
                    HorizontalOptions="Start"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    Margin="5"
                    FontSize="20"/>
                
