                    Text="d" 
                    Clicked="OnGuessBtnClicked"
                    HorizontalOptions="Start"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    Margin="5"
                    FontSize="20"/>
                
                <Button
                    Text="e" 
                    Clicked="OnGuessBtnClicked"
                    HorizontalOptions="Start"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    Margin="5"
                    FontSize="20"/>
                
                <Button
                    Text="f" 
                    Clicked="OnGuessBtnClicked"
                    HorizontalOptions="Start"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    Margin="5"
                    FontSize="20"/>
                
                <Button
                    Text="g" 
                    Clicked="OnGuessBtnClicked"
                    HorizontalOptions="Start"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    Margin="5"
                    FontSize="20"/>
                
                <Button
                    Text="h" 
                    Clicked="OnGuessBtnClicked"
                    HorizontalOptions="Start"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    Margin="5"
                    FontSize="20"/>
                
