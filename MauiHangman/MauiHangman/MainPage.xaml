            <Button
                x:Name="PlayBtn"
                Text="Play" 
                Clicked="OnPlayBtnClicked"
                HorizontalOptions="Fill"
                FontSize="20"/>
            
            <Label
                Text="{Binding ErrorMessage}"
                TextColor="Red"
                FontSize="20"
                IsVisible="{Binding IsErrorVisible}" />
            
            <Label
                Text="{Binding GameMessage}"
                TextColor="DarkBlue"
                FontSize="20"
                IsVisible="{Binding IsGameMsgVisible}" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
